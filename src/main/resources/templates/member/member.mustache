<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>회원가입</title>
    <!-- CDN 추가 (머스테치 상단 head에) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
    <style>
        * {
          box-sizing: border-box;
        }

        body {
          margin: 0;
          padding: 0;
          font-family: 'Segoe UI', sans-serif;
          background-color: #f9f9f9;
          display: flex;
          justify-content: center;
          align-items: center;
        }

        .container {
          margin: 20px 0;
          display: flex;
          flex-direction: column;
          align-items: center;
        }

        .tab-header {
          width: 500px;
          display: flex;
          border-radius: 10px 10px 0 0;
          overflow: hidden;
        }

        .tab-header a {
          flex: 1;
          text-align: center;
          padding: 15px 0;
          background-color: #007BFF;
          color: white;
          text-decoration: none;
          font-weight: bold;
          transition: background-color 0.3s;
        }

        .tab-header a:hover {
          background-color: #0056b3;
        }

        .signup-container {
          width: 500px;
          background-color: #ffffff;
          border-radius: 0 0 10px 10px;
          box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
          display: flex;
          overflow: hidden;
          flex-direction: column;
        }

        .signup-content {
          display: flex;
          justify-content:center;
          padding: 30px;
        }

        .left-side {
          width: 40%;
          padding-right: 20px;
          border-right: 1px solid #ddd;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: flex-start;
        }

        .image-preview {
          width: 150px;
          height: 150px;
          border-radius: 5px;
          margin-bottom: 15px;
          object-fit: cover;
        }

        .right-side {
          padding-left: 20px;
          display: flex;
          flex-direction: column;
        }

        .input-group {
          margin-bottom: 15px;
        }

        .input-group label {
          display: block;
          font-weight: bold;
          margin-bottom: 5px;
          font-size: 14px;
        }

        .input-group input {
          width: 100%;
          padding: 10px;
          font-size: 14px;
          border: 1px solid #ccc;
          border-radius: 5px;
        }

        .image-upload-btn {
          padding: 8px 15px;
          font-size: 14px;
          background-color: #007BFF;
          color: white;
          border: none;
          border-radius: 5px;
          cursor: pointer;
        }

        .signup-button {
          width: 100%;
          padding: 15px;
          background-color: #007BFF;
          color: white;
          font-size: 16px;
          font-weight: bold;
          border: none;
          border-top: 1px solid #ddd;
          border-radius: 0 0 10px 10px;
          cursor: pointer;
        }

        .signup-button:hover {
          background-color: #0056b3;
        }
    </style>
</head>
<body>

<div class="container">
    <!-- 상단 탭 -->
    <div class="tab-header">
        <a href="/">로그인</a>
        <a href="/member/save-form">회원가입</a>
    </div>

    <form action="/member/save" method="post" enctype="multipart/form-data">
        <!-- 회원가입 박스 -->
        <div class="signup-container">
            <div class="signup-content">
                <!-- 오른쪽: 입력 폼 -->
                <div class="right-side">
                    <div class="">
                        <input type="file" name="profileImage">
                    </div>
                    <div class="input-group">
                        <label for="memberName">회원 이름</label>
                        <input type="text" name="memberName" id="memberName" placeholder="회원 이름을 입력하세요">
                        {{#errors.memberName}}
                            <p style="color: red;">{{errors.memberName}}</p>
                        {{/errors.memberName}}
                    </div>

                    <div class="input-group">
                        <label for="username">아이디</label>
                        <input type="text" name="memberId" id="username" placeholder="아이디를 입력하세요">
                        {{#errors.memberId}}
                            <p style="color: red;">{{errors.memberId}}</p>
                        {{/errors.memberId}}
                    </div>

                    <div class="input-group">
                        <label for="password">비밀번호</label>
                        <input type="password" name="password" id="password" placeholder="비밀번호를 입력하세요">
                        {{#errors.password}}
                            <p style="color: red;">{{errors.password}}</p>
                        {{/errors.password}}
                    </div>

                    <div class="input-group">
                        <label for="rePassword">비밀번호 확인</label>
                        <input type="password" name="rePassword" id="rePassword" placeholder="비밀번호를 입력하세요">
                        {{#errors.rePassword}}
                            <p style="color: red;">{{errors.rePassword}}</p>
                        {{/errors.rePassword}}
                    </div>

                    <div class="input-group">
                        <label for="email">이메일</label>
                        <input type="email" name="memberEmail" id="email" placeholder="이메일을 입력하세요">
                        {{#errors.memberEmail}}
                            <p style="color: red;">{{errors.memberEmail}}</p>
                        {{/errors.memberEmail}}
                    </div>

                    <div class="input-group">
                        <label for="birthdate">생년월일</label>
                        <input type="date" name="brithDay" id="birthdate">
                        {{#errors.birthDay}}
                            <p style="color: red;">{{errors.birthDay}}</p>
                        {{/errors.birthDay}}
                    </div>

                    <div class="input-group">
                        <label>전화번호</label>
                        <div style="display: flex; gap: 5px;">
                            <input type="text" name="phone1" id="phone1" maxlength="3" placeholder="010">
                            <span>-</span>
                            <input type="text" name="phone2" id="phone2" maxlength="4" placeholder="1234">
                            <span>-</span>
                            <input type="text" name="phone3" id="phone3" maxlength="4" placeholder="5678">
                        </div>
                        {{#errors.phone1}}
                            <p style="color: red;">{{errors.phone1}}</p>
                        {{/errors.phone1}}
                    </div>

                    <div class="input-group">
                        <label>주소</label>
                        <div style="display: flex; gap: 5px;">
                            <input type="text" name="addressNumber" id="address" placeholder="우편번호">
                            <button type="button" class="image-upload-btn" onclick="searchAddress()"
                                    style="padding: 5px 20px;">주소 찾기
                            </button>
                        </div>
                        {{#errors.addressNumber}}
                            <p style="color: red;">{{errors.addressNumber}}</p>
                        {{/errors.addressNumber}}
                        <input type="text" name="addressDefault" id="addressDefault" placeholder="기본 주소를 입력하세요"
                               style="margin-top: 10px;">
                        {{#errors.addressDefault}}
                            <p style="color: red;">{{errors.addressDefault}}</p>
                        {{/errors.addressDefault}}
                        <input type="text" name="addressDetail" id="addressDetail" placeholder="상세 주소를 입력하세요"
                               style="margin-top: 10px;">
                        {{#errors.addressDetail}}
                            <p style="color: red;">{{errors.addressDetail}}</p>
                        {{/errors.addressDetail}}
                    </div>
                    <div class="input-group">
                        {{#errors}}
                            {{#rePassword}}
                                <p style="color: red;">{{rePassword}}</p>
                            {{/rePassword}}
                        {{/errors}}
                    </div>
                </div>
            </div>

            <!-- 하단 버튼 -->
            <button class="signup-button" type="submit">회원가입</button>
        </div>
    </form>
</div>

<script>

    // 카카오 주소 API 예제 (daum 객체는 외부 스크립트로 로딩해야 작동함)
    function searchAddress() {
      new daum.Postcode({
        oncomplete: function (data) {
          let addr = '';
          let extraAddr = '';

          if (data.userSelectedType === 'R') {
            addr = data.roadAddress;
          } else {
            addr = data.jibunAddress;
          }

          if (data.userSelectedType === 'R') {
            if (data.bname !== '' && /[동|로|가]$/g.test(data.bname)) {
              extraAddr += data.bname;
            }
            if (data.buildingName !== '' && data.apartment === 'Y') {
              extraAddr += (extraAddr !== '' ? ', ' + data.buildingName : data.buildingName);
            }
            if (extraAddr !== '') {
              extraAddr = ' (' + extraAddr + ')';
            }
          }

          document.getElementById('address').value = data.zonecode;
          document.getElementById('addressDefault').value = addr + extraAddr;
          document.getElementById('addressDetail').focus();
        }
      }).open();
    }

    // 전화번호 숫자만 입력 & 자동 포커스
    ['phone1', 'phone2', 'phone3'].forEach((id, index, arr) => {
      const el = document.getElementById(id);
      el.addEventListener('input', () => {
        el.value = el.value.replace(/\D/g, '');
        if (el.value.length === el.maxLength && arr[index + 1]) {
          document.getElementById(arr[index + 1]).focus();
        }
      });
    });
</script>

</body>
</html>
